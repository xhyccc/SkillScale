# ── SkillScale Python Skill Server (OpenSkills) ──
#
# Generic image — deploy with different SKILLSCALE_TOPIC and
# SKILLSCALE_SKILLS_DIR environment variables per container.
#
# Each container gets:
#   - Its own AGENTS.md listing installed skills
#   - The skill scripts + SKILL.md files
#   - The shared llm_utils.py for LLM calls
#   - The openskills.py loader for progressive disclosure

FROM python:3.12-slim

ENV DEBIAN_FRONTEND=noninteractive

# System dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    libzmq5 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install Python dependencies
COPY skill-server-py/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# Copy skill server code
COPY skill-server-py/server.py /app/server.py
COPY skill-server-py/openskills.py /app/openskills.py

# Copy shared LLM utilities (mounted alongside skills)
COPY skills/llm_utils.py /app/skills/llm_utils.py

# Default: skills are volume-mounted at /skills
# .env is volume-mounted or injected via env vars
RUN mkdir -p /skills

# Environment variables (overridden per-container)
ENV SKILLSCALE_TOPIC=TOPIC_DEFAULT
ENV SKILLSCALE_DESCRIPTION=""
ENV SKILLSCALE_SKILLS_DIR=/skills
ENV SKILLSCALE_PROXY_XPUB=tcp://proxy:5555
ENV SKILLSCALE_PROXY_XSUB=tcp://proxy:5444
ENV SKILLSCALE_WORKERS=2
ENV SKILLSCALE_TIMEOUT=120

ENTRYPOINT ["python3", "/app/server.py"]
